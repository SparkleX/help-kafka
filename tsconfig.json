{
	"compileOnSave": true,
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"incremental": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
